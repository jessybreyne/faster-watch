---
export interface Props {
	title: string;
	body: string;
	href: string;
}

const { href, title, body } = Astro.props;
---

<li class="link-card">
	<a href={href}>
		<h2>
			{title}
			<span>&rarr;</span>
		</h2>
		<p>
			{body}
		</p>
	</a>
</li>
<style>
	.link-card {
		list-style: none;
		display: flex;
		padding: 0.25rem;
		background-color: transparent;
		background-image: none;
		border: 2px solid white;
		transition: all .4s ease-in-out,padding .2s ease-in-out,font-weight 0s linear; 
	}

	.link-card > a {
		width: 100%;
		text-decoration: none;
		line-height: 1.4;
		padding: 1rem 1.3rem;
	}
	h2 {
		margin: 0;
		font-size: 1.25rem;
		transition: color 0.6s cubic-bezier(0.22, 1, 0.36, 1);
		color: var(--primary);
	}
	p {
		margin-top: 0.5rem;
		margin-bottom: 0;
		color: white;
	}
	.link-card:is(:hover, :focus-within) {
		background-color: white;
	}
	.link-card:is(:hover, :focus-within) p {
		color: black;
	}
	.link-card:is(:hover, :focus-within) h2 {
		color: var(--primary-hover);
	}
</style>
