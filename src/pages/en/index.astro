---
import Layout from '../../layouts/Layout.astro';
import Exercices from '../../components/Exercices.astro';
---

<Layout title="Apprendre à lire l'heure plus rapidement">
	<h1>Welcome to <span class="text-primary">Faster Watch</span></h1>
	<p class="m-2">
		This site will help you learn to tell time much faster through interactive exercises and blog posts.
	</p>
	<div>
		<h2>Découvrez les fonctionnalités du site :</h2>
	</div>
	<Exercices />
</Layout>

<style>
	main {
		margin: auto;
		padding: 1.5rem;
		max-width: 60ch;
	}
	h1 {
		font-size: 3rem;
		font-weight: 800;
		margin: 0;
	}
	.text-primary {
		color: var(--primary);
	}
	.m-2 {
		margin-top: 2rem;
		margin-bottom: 2rem;
	}
</style>
